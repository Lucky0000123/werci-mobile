# WERCI Mobile App Environment Configuration Template
# Copy this file to .env and update with your actual values

# Primary API Endpoints
# Production: DigitalOcean cloud API for mobile field operations
VITE_CLOUD_BASE=http://159.65.13.232:5000
# Fallback: Local company network SQL Server
VITE_LOCAL_BASE=http://10.40.20.184:8082
# Development: Local development server
VITE_DEV_BASE=http://localhost:8082

# API Configuration
VITE_API_TIMEOUT=10000
VITE_API_RETRIES=3
VITE_HEALTH_CHECK_TIMEOUT=5000

# Authentication Configuration
VITE_AUTH_ENDPOINT=/api/mobile/auth/device
VITE_TOKEN_REFRESH_ENDPOINT=/api/mobile/auth/refresh
VITE_TOKEN_EXPIRY_HOURS=24

# Offline Configuration
VITE_OFFLINE_ENABLED=true
VITE_SYNC_INTERVAL=300000
VITE_MAX_OFFLINE_ITEMS=1000

# Photo Configuration
VITE_PHOTO_QUALITY=0.8
VITE_MAX_PHOTO_SIZE=5242880
VITE_PHOTO_FORMAT=jpeg

# QR Code Configuration
VITE_QR_PREFIX=EQUIP:
VITE_QR_TIMEOUT=30000

# Debug Configuration (disable in production)
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# App Information
VITE_APP_NAME=WERCI Inspector
VITE_APP_VERSION=1.0.0
VITE_COMPANY_NAME=WERCI
